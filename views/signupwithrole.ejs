<html>
<head>
<title>RunBook-SignUp</title>


<script src="http://code.jquery.com/jquery-1.11.0.min.js"></script>
<style>
body {
	background: url(../images/bg-header.gif) repeat-x top center;
}

body #header {
	width: 100%;
	height: 130px;
	overflow: hidden;
}

body #header #logo {
	opacity: 0.7;
	margin: 5px 0 0 30px;
	padding: 0 0 0;
	font-size: 90px;
	color: white;
	float: left;
	text-align: center;
	border-radius: 10px;
	text-align: center;
	float: left;
	padding: 0 0 0;
}

body #header .clicktag {
	opacity: 0.7;
	background-color: white;
	margin: 80px 5px 0;
	width: 80px;
	height: 25px;
	font-size: 20px;
	color: #10edf0;
	float: right;
	text-align: center;
	border-radius: 5px;
	text-align: center;
}

body #frontline {
	background: url(/images/frontimage.jpg) 0 0 no-repeat;
	width: 1100px;
	height: 500;
	margin: 0 auto;
}

body #frontline #takespace {
	height: 10px;
	border-style: solid;
	border-width: 0px;
	padding: 0;
}

body #frontline #inputcard {
	background-color: white;
	opacity: 0.9;
	margin: 50px auto 0;
	width: 700px;
	height: 300px;
	border-style: solid;
	border-width: 2px;
	border-color: #658e95;
	border-radius: 5px;
	padding: 20px 0;
}

body #frontline #inputcard #left button {
	float: left;
	width: 260px;
	height: 260px;
	font-size: 30px;
	color: white;
	background-color: #658e95;
	border-style: solid;
	border-width: 2px;
	border-color: #658e95;
	border-radius: 5px;
	border-style: solid;
	background-color: #658e95;
	border-style: solid;
	margin: 10px 0 0 60px;
}

body #frontline #inputcard #right button {
	float: right;
	width: 260px;
	height: 260px;
	font-size: 30px;
	color: white;
	background-color: #658e95;
	border-style: solid;
	border-width: 2px;
	border-color: #658e95;
	border-radius: 5px;
	border-style: solid;
	background-color: #658e95;
	border-style: solid;
	margin: 10px 60px 0 0;
}
</style>

</head>
<body>
	<div id="header">
		<div id="logo">RunBook</div>
		<div class="clicktag" id="abouttag">About</div>
		<div class="clicktag" id="hometag">Home</div>
	</div>
	<div id="frontline">

		<div id="takespace"></div>
		<div id="inputcard">

			<div id="left">
				<button id="submitasguide">Submit As Guide</button>
			</div>
			<div id="right">
				<button id="submitasuser">Submit As User</button>
			</div>
		</div>

	</div>




</body>

<script>
	document.getElementById('logo').addEventListener('click', function() {
		window.location.assign('/');
	});
	document.getElementById('hometag').addEventListener('click', function() {
		window.location.assign('/');
	});
	document.getElementById('abouttag').addEventListener('click', function() {
		window.location.assign('/about');
	});
	document.getElementById('submitasguide').addEventListener('click',
			function() {

				$.post("/signupwithrole", {
					role : "guide"
				}, function(res) {
					if (res.code == 200) {
						alert("signup success!")
						window.location.assign('/signin');
					} else {
						if (res.code == 301) {
							alert("email was used by previous user");
							window.location.assign('/signup');
						} else {
							alert("signup failed with unknown error");
						}
					}
				});
			});

	document.getElementById('submitasuser').addEventListener('click',
			function() {

				$.post("/signupwithrole", {
					role : "user"
				}, function(res) {
					if (res.code == 200) {
						alert("signup success!")
						window.location.assign('/signin');
					} else {
						if (res.code == 301) {
							alert("email was used by previous user");
							window.location.assign('/signup');
						} else {
							alert("signup failed with unknown error");
						}
					}
				});
			});
</script>

</html>